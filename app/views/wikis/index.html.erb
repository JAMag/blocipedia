<h1>All Darth-Wikis</h1>

<% if policy(Wiki.new).create? %>
  <%= link_to "New Darth-Wiki", new_wiki_path, class: 'btn btn-success' %>
<% end %>

<% @wikis.each do |wiki| %>
     <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <li><%= link_to wiki.title, wiki_path(wiki)%>
       </h4>
     </div>
   </div>
<% end %>
